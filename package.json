{
  "name": "english-ai-tutor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:imports": "pnpm exec eslint --ext .ts,.tsx,.js,.jsx --fix apps/web/src packages",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "prisma:generate": "pnpm --filter web exec prisma generate",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "openapi:generate": "pnpm exec tsx apps/web/scripts/export-openapi.ts",
    "openapi:lint": "pnpm run openapi:generate && pnpm exec spectral lint apps/web/.openapi/openapi.json",
    "precommit:check": "pnpm lint && pnpm typecheck && pnpm test && pnpm openapi:lint"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@stoplight/spectral-cli": "^6.15.0",
    "@types/cls-hooked": "^4.3.9",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "eslint": "8.57.1",
    "eslint-config-next": "15.0.4",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-simple-import-sort": "12.1.0",
    "husky": "9.1.7",
    "lint-staged": "15.2.10",
    "prettier": "^3.6.0",
    "prisma": "^6.18.0",
    "tsx": "^4.20.6",
    "turbo": "^2.1.2",
    "typescript": "5.7.2"
  },
  "pnpm": {
    "overrides": {
      "@auth/core": "0.41.1"
    }
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.18.0",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm exec eslint --max-warnings=0 --fix",
      "pnpm exec prettier --write"
    ],
    "*.{json,md,css,scss,yml,yaml}": [
      "pnpm exec prettier --write"
    ]
  },
  "dependencies": {
    "@prisma/client": "6.18.0"
  }
}
